{
    "appId": "com.merify.app",
    "productName": "Merify",
    "icon": "merify-logo.png",
    "asar": true,
    "files": [
      "dist",
      "dist-ui",
      "package.json"
    ],
    "extraResources": [
      "dist/preload.cjs",
      "src/assets/**"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "diegolopezsm",
        "repo": "merify",
        "releaseType": "release"
      }
    ]
  }