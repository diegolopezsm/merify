{
  "appId": "com.merify.app",
  "icon": "merify-logo.png",
  "files": ["dist", "dist-ui"],
  "extraResources": [
    "dist/preload.cjs", 
    "src/assets/**",
    {
      "from": ".env.production",
      "to": ".env.production"
    }
  ],
  "mac": {
    "target": "dmg"
  },
  "win": {
    "target": ["portable", "msi"]
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm", "snap", "tar.gz"],
    "category": "Utility"
  }
}
