{
  "name": "Merify",
  "private": true,
  "version": "0.16.1",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:ui dev:electron",
    "dev:ui": "vite",
    "dev:electron": "nodemon",
    "dev:electron:once": "npm run transpile:electron; cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production vue-tsc -b && vite build",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "build:mac": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "build:win": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --win --x64",
    "build:linux": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "build:release": "npm run transpile:electron && npm run build && electron-builder -mw",
    "change-add": "npx @changesets/cli",
    "change-apply": "npx @changesets/cli version",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky"
  },
  "build": {
    "appId": "com.merify.app",
    "productName": "Merify",
    "icon": "merify-logo.png",
    "files": [
      "dist",
      "dist-ui",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "diegolopezsm",
        "repo": "merify"
      }
    ]
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@mlc-ai/web-llm": "^0.2.79",
    "@slack/web-api": "^7.10.0",
    "@tailwindcss/vite": "^4.1.13",
    "@vueuse/core": "^13.9.0",
    "changeset": "^0.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0",
    "os-utils": "^0.0.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.8.1",
    "@types/os-utils": "^0.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "vue-tsc": "^3.0.7"
  }
}
