{
  "name": "Merify",
  "private": true,
  "version": "0.8.0",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:ui dev:electron",
    "dev:ui": "vite",
    "dev:electron": "nodemon",
    "dev:electron:once": "npm run transpile:electron; cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production vue-tsc -b && vite build",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "build:mac": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "build:win": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --win --x64",
    "build:linux": "rm -rf dist && rm -rf dist-ui && npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "change-add": "npx @changesets/cli",
    "change-apply": "npx @changesets/cli version"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@mlc-ai/web-llm": "^0.2.79",
    "@slack/web-api": "^7.10.0",
    "@tailwindcss/vite": "^4.1.13",
    "changeset": "^0.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-store": "^10.1.0",
    "keytar": "^7.9.0",
    "os-utils": "^0.0.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@types/os-utils": "^0.0.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "vue-tsc": "^3.0.7"
  }
}
